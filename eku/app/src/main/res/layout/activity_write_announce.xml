<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/write_announce_title"
        android:layout_width="394dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="제목"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/write_announce_building"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:text="강의동"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.022"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_announce_title" />

    <EditText
        android:id="@+id/write_announce_content"
        android:layout_width="410dp"
        android:layout_height="283dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/building9" />

    <Button
        android:id="@+id/write_announce_save"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2952EA"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/write_announce_close"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4B4B4B"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/building0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="88dp"
        android:text="제2공학관"
        app:layout_constraintStart_toEndOf="@+id/building6"
        app:layout_constraintTop_toBottomOf="@+id/write_announce_building" />

    <CheckBox
        android:id="@+id/building1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="1강"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/write_announce_building" />

    <CheckBox
        android:id="@+id/building2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="2강"
        app:layout_constraintStart_toEndOf="@+id/building1"
        app:layout_constraintTop_toBottomOf="@+id/write_announce_building" />

    <CheckBox
        android:id="@+id/building3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="3강"
        app:layout_constraintStart_toEndOf="@+id/building2"
        app:layout_constraintTop_toBottomOf="@+id/write_announce_building" />

    <CheckBox
        android:id="@+id/building4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="4강"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/building1" />

    <CheckBox
        android:id="@+id/building5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="5강"
        app:layout_constraintStart_toEndOf="@+id/building4"
        app:layout_constraintTop_toBottomOf="@+id/building2" />

    <CheckBox
        android:id="@+id/building6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="6강"
        app:layout_constraintStart_toEndOf="@+id/building5"
        app:layout_constraintTop_toBottomOf="@+id/building3" />

    <CheckBox
        android:id="@+id/building7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="7강"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/building4" />

    <CheckBox
        android:id="@+id/building8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="8강"
        app:layout_constraintStart_toEndOf="@+id/building7"
        app:layout_constraintTop_toBottomOf="@+id/building5" />

    <CheckBox
        android:id="@+id/building9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="9강"
        app:layout_constraintStart_toEndOf="@+id/building8"
        app:layout_constraintTop_toBottomOf="@+id/building6" />

</androidx.constraintlayout.widget.ConstraintLayout>
