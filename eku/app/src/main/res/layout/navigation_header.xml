<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/eku_image"
        android:layout_width="257dp"
        android:layout_height="110dp"
        android:layout_marginTop="35dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewSupporter"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="@id/eku_image"
        app:layout_constraintEnd_toEndOf="@id/eku_image"
        app:layout_constraintStart_toStartOf="@id/eku_image"
        app:layout_constraintTop_toTopOf="@id/eku_image" />

</androidx.constraintlayout.widget.ConstraintLayout>