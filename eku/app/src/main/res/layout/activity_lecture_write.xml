<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/lecture_write_NameText"
        android:layout_width="394dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="강의명"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lecture_write_ProfessorText"
        android:layout_width="394dp"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="교수명"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_write_NameText" />

    <TextView
        android:id="@+id/lecture_write_textView"
        android:layout_width="59dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"
        android:text="학점"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_write_ProfessorText" />

    <RatingBar
        android:id="@+id/lecture_write_ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:numStars="5"
        android:stepSize="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gradeselect" />

    <EditText
        android:id="@+id/lecture_write_ContentText"
        android:layout_width="404dp"
        android:layout_height="221dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="내용"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lecture_write_ratingBar" />

    <Button
        android:id="@+id/lecture_write_SaveButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#2952EA"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/lecture_write_CloseButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#4B4B4B"
        android:text="닫기"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/gradeselect"
        android:layout_width="179dp"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal|center_vertical"
        android:hint="눌러서 학점 선택"
        app:layout_constraintStart_toEndOf="@+id/lecture_write_textView"
        app:layout_constraintTop_toBottomOf="@+id/lecture_write_ProfessorText" />

</androidx.constraintlayout.widget.ConstraintLayout>
