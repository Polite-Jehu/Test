<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="388dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="수정할 자유 게시글 제목"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/update_free_title"
            android:layout_width="335dp"
            android:layout_height="46dp"
            android:layout_marginTop="16dp"
            android:ems="15"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:text="수정할 자유 게시글 내용"
            app:layout_constraintStart_toStartOf="@+id/update_free_title"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/update_free_content"
            android:layout_width="335dp"
            android:layout_height="147dp"
            android:layout_marginTop="16dp"
            android:ems="15"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:lines="6"
            app:layout_constraintStart_toStartOf="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <Button
            android:id="@+id/btn_free_update_cancle"
            android:layout_width="165dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:background="@color/kyonggi_color4"
            android:text="취소"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/update_free_content"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/btn_free_update_ok"
            app:layout_constraintStart_toStartOf="@+id/update_free_content"
            app:layout_constraintTop_toBottomOf="@+id/update_free_content" />

        <Button
            android:id="@+id/btn_free_update_ok"
            android:layout_width="165dp"
            android:layout_height="54dp"
            android:layout_marginTop="16dp"
            android:background="@color/kyonggi_color"
            android:text="확인"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/update_free_content"
            app:layout_constraintTop_toBottomOf="@+id/update_free_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>