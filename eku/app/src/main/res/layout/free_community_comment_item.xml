<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="2"
                android:id="@+id/detail_Free_comment_writer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="작성자"
                android:textSize="15dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_weight="3"
                android:id="@+id/detail_Free_comment_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="시간"
                android:textSize="15dp"
                />
        </LinearLayout>


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/detail_Free_comment_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="20dp"
            />
        <EditText
            android:visibility="gone"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/detail_Free_comment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내용"
            android:textSize="20dp"
            />

        <LinearLayout
            android:id="@+id/detail_Free_comment_edit_layout"
            android:visibility="gone"
            android:gravity="right"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/detail_Free_comment_btn_edit_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정하기" />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/detail_Free_comment_btn_edit_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="취소" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_Free_comment_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/detail_Free_comment_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_blue"
                android:fontFamily="@font/font_noto_sans_kr"
                android:includeFontPadding="false"
                android:text="modify"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/detail_Free_comment_btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_blue"
                android:fontFamily="@font/font_noto_sans_kr"
                android:includeFontPadding="false"
                android:text="delete"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>