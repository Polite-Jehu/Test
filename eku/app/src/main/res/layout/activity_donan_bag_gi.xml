<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kyonggi_color"
    tools:context=".DonanBagGi">

    <Button
        android:id="@+id/Donan_Button"
        android:layout_width="119dp"
        android:layout_height="36dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="168dp"
        android:background="@color/kyonggi_color2"
        android:shadowColor="#FFFFFF"
        android:text="작동하기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Donan_Off"
        android:layout_width="349dp"
        android:layout_height="51dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/kyonggi_color4"
        android:text="알림끄기"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_Button" />

    <TextView
        android:id="@+id/Donan_TextView"
        android:layout_width="348dp"
        android:layout_height="106dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="도난방지기능"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_Off" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="348dp"
        android:layout_height="65dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:background="@color/kyonggi_color3"
        android:text="메인으로 돌아가기"
        android:textColor="#795548"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_TextView" />
</androidx.constraintlayout.widget.ConstraintLayout>