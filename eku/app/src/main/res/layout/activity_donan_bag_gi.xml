<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".DonanBagGi">

    <TextView
        android:id="@+id/Donan_Title"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/noto_sans_kr_bold"

        android:text="도난방지"
        android:textColor="#2A5189"
        android:textSize="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Donan_Button"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="30dp"
        android:background="#2A5189"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:shadowColor="#FFFFFF"
        android:text="도난방지 기능 켜기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_Off" />

    <Button
        android:id="@+id/Donan_Off"
        android:layout_width="349dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/kyonggi_color4"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="알림끄기"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_TextView" />

    <Button
        android:id="@+id/BackButton"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_marginTop="20dp"
        android:background="#2A5189"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:text="메인으로 돌아가기"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_Button" />

    <TextView
        android:id="@+id/Donan_TextView"
        android:layout_width="359dp"
        android:layout_height="106dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:gravity="center"
        android:text="도난방지기능 "
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_ImageView" />

    <ImageView
        android:id="@+id/Donan_ImageView"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="45dp"
        android:background="#F6F6F6"
        android:backgroundTint="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Donan_Title"
        app:srcCompat="@drawable/ic_baseline_notifications_active_24" />

</androidx.constraintlayout.widget.ConstraintLayout>