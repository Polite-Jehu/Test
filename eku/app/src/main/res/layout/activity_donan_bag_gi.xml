<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".DonanBagGi">

    <TextView
            android:id="@+id/Donan_Title"
            android:layout_width="139dp"
            android:layout_height="57dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="도난방지"
            android:textColor="#2A5189"
            android:textSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/Donan_Button"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="48dp"
            android:background="#2A5189"
            android:shadowColor="#FFFFFF"
            android:text="도난방지 기능 켜기"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Donan_TextView" />

    <Button
            android:id="@+id/Donan_Off"
            android:layout_width="349dp"
            android:layout_height="51dp"
            android:backgroundTint="@color/kyonggi_color4"
            android:text="알림끄기"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <Button
            android:id="@+id/BackButton"
            android:layout_width="250dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:background="#2A5189"
            android:text="메인으로 돌아가기"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Donan_Button" />

    <TextView
            android:id="@+id/Donan_TextView"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="도난방지기능 "
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Donan_ImageView" />

    <ImageView
            android:id="@+id/Donan_ImageView"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginTop="84dp"
            android:background="#F6F6F6"
            android:backgroundTint="#FDFDFD"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Donan_Title"
            app:srcCompat="@drawable/ic_baseline_notifications_active_24"
            app:tint = "#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>