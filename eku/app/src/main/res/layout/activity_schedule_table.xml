<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           xmlns:tools="http://schemas.android.com/tools"
                                           android:id="@+id/schedule_drawerLayout"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           tools:context=".ScheduleTable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:text="시간표"
            android:textColor="#2A5189"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/stroke_under"
            android:backgroundTint="#AECFFF"
            app:alignmentMode="alignMargins"
            app:columnCount="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:rowCount="9">

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="월" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="화" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="수" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="목" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="금" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="1교시"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="2교시"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="3교시"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="4교시"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="5교시"
                app:layout_column="0"
                app:layout_row="5" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="6교시"
                app:layout_column="0"
                app:layout_row="6" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="7교시"
                app:layout_column="0"
                app:layout_row="7" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:background="@drawable/border_box_line"
                android:gravity="center"
                android:text="8교시"
                app:layout_column="0"
                app:layout_row="8" />

        </androidx.gridlayout.widget.GridLayout>

        <EditText
            android:id="@+id/Schedule_password"
            android:layout_width="385dp"
            android:layout_height="44dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:gravity="center"
            android:hint="시간표 공유 코드"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

        <Button
            android:id="@+id/schedule_up_button"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/border_box_blue"
            android:text="▲"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_password" />

        <Button
            android:id="@+id/schedule_down_button"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/border_box_blue"
            android:text="▼"
            app:layout_constraintStart_toEndOf="@+id/schedule_add_button"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_password" />

        <Button
            android:id="@+id/schedule_add_button"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/border_box_blue"
            android:text="+"
            app:layout_constraintStart_toEndOf="@+id/schedule_up_button"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_password" />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/schedule_navigationView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:headerLayout="@layout/navigation_header"
            app:menu="@menu/navigation_menu"
            tools:layout_editor_absoluteX="-280dp"
            tools:layout_editor_absoluteY="22dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>