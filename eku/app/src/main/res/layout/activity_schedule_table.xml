<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/schedule_Spinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#FFFFFF"
        android:backgroundTint="#F6A788"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@drawable/stroke_under"
        android:gravity="center"
        android:text="시간표"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/schedule_Spinner" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@drawable/stroke_under"
        app:alignmentMode="alignMargins"
        app:columnCount="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:rowCount="9">

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="월" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="화" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="수" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="목" />

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="금" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="1교시"
            app:layout_column="0"
            app:layout_row="1" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="2교시"
            app:layout_column="0"
            app:layout_row="2" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="3교시"
            app:layout_column="0"
            app:layout_row="3" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="4교시"
            app:layout_column="0"
            app:layout_row="4" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="5교시"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="6교시"
            app:layout_column="0"
            app:layout_row="6" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="7교시"
            app:layout_column="0"
            app:layout_row="7" />

        <TextView
            android:layout_width="69dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="8교시"
            app:layout_column="0"
            app:layout_row="8" />

    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/schedule_up_button"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="▲"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/schedule_down_button"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="▼"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/schedule_up_button"
        app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/schedule_delete_button"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/schedule_add_button"
        app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/schedule_add_button"
        android:layout_width="102dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:text="+"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/schedule_down_button"
        app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/Schedule_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:ems="10"
        android:gravity="center"
        android:hint="시간표 공유 코드"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>