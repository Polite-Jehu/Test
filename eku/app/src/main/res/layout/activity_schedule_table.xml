<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/schedule_drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleTable">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/schedule_Spinner"
            android:layout_width="358dp"
            android:layout_height="41dp"
            android:background="#FFFFFF"
            android:backgroundTint="#F6A788"
            android:gravity="center_vertical"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule_Menu"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/schedule_Menu"
            android:layout_width="50dp"
            android:layout_height="42dp"
            android:backgroundTint="#F6A788"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/menuicon" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/stroke_under"
            android:gravity="center"
            android:text="시간표"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_Spinner" />

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="407dp"
            android:layout_height="452dp"
            android:background="@drawable/stroke_under"
            app:alignmentMode="alignMargins"
            app:columnCount="6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10"
            app:rowCount="9">

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="월" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="화" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="수" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="목" />

            <TextView
                android:layout_width="68dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="금" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="1교시"
                app:layout_column="0"
                app:layout_row="1" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="2교시"
                app:layout_column="0"
                app:layout_row="2" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="3교시"
                app:layout_column="0"
                app:layout_row="3" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="4교시"
                app:layout_column="0"
                app:layout_row="4" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="5교시"
                app:layout_column="0"
                app:layout_row="5" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="6교시"
                app:layout_column="0"
                app:layout_row="6" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="7교시"
                app:layout_column="0"
                app:layout_row="7" />

            <TextView
                android:layout_width="69dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="8교시"
                app:layout_column="0"
                app:layout_row="8" />

        </androidx.gridlayout.widget.GridLayout>

        <Button
            android:id="@+id/schedule_up_button"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="▲"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/schedule_down_button"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="▼"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule_up_button"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
            app:layout_constraintVertical_bias="0.015" />

        <Button
            android:id="@+id/schedule_add_button"
            android:layout_width="190dp"
            android:layout_height="45dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="1dp"
            android:text="시간표 추가"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/schedule_down_button"
            app:layout_constraintTop_toBottomOf="@+id/Schedule_password"
            app:layout_constraintVertical_bias="0.015" />

        <EditText
            android:id="@+id/Schedule_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:ems="10"
            android:gravity="center"
            android:hint="시간표 공유 코드"
            android:inputType="number"
            android:maxLength="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/schedule_navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/navigation_header"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"/>

</androidx.drawerlayout.widget.DrawerLayout>